<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/product_list"
    android:padding="15dp"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp">
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toStartOf="@id/productName"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="name"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        card_view:layout_constraintStart_toEndOf="@id/productImage"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toTopOf="@id/priceProduct"
        card_view:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/priceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/price"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        card_view:layout_constraintTop_toBottomOf="@id/productName"
        card_view:layout_constraintBottom_toTopOf="@id/layoutBtns"
        card_view:layout_constraintEnd_toEndOf="parent"
        />
    <LinearLayout
        android:id="@+id/layoutBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/ic_edit"
            android:padding="5dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/btnDelete"
            card_view:layout_constraintStart_toEndOf="@+id/contactName"
            card_view:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_trash"
            android:padding="5dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/btnEdit"
            card_view:layout_constraintTop_toTopOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
